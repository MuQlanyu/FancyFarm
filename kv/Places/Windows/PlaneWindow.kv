#! 2.0.0

<PlaneHead@BoxLayout>:
    orientation: "horizontal"
    padding: 2

    canvas.before:
        Color:
            rgba: (50/250, 50/250, 50/250, 1)
        RoundedRectangle:
            size: self.size
            pos:self.pos
            radius: [15]
    Widget:
        size_hint_x: 0.96
    Button:
        size_hint_x: 0.04
        background_color: (1, 0, 0, 0.8)
        on_press: root.parent.parent.close()

<PlaneHeader@BoxLayout>:
    orientation: "horizontal"
    spacing: 10
    size_hint_y: 0.1
    Label:
        size_hint_x: 0.1
        text: "№"
    Label:
        size_hint_x: 0.5
        text: "name"
    Label:
        size_hint_x: 0.2
        text: "price"
    Label:
        size_hint_x: 0.1
        text: "buy"
    Label:
        size_hint_x: 0.1
        text: "return"

<PlaneProduct>:
    pr_number: product_number
    pr_name: product_name
    pr_price: product_price
    buy_button: buy_button
    back_button: back_button

    orientation: "horizontal"
    spacing: 10
    size_hint_y: 0.1
    Label:
        id: product_number
        size_hint_x: 0.1
        text: "№"
    Label:
        id: product_name
        size_hint_x: 0.5
        text: "name"
    Label:
        id: product_price
        size_hint_x: 0.2
        text: "price"
    Button:
        id: buy_button
        size_hint_x: 0.1
        text: "buy"
        on_press: root.buy_product()
    Button:
        id: back_button
        size_hint_x: 0.1
        text: "return"
        on_press: root.return_product()

<PlaneWindow>:
    pr_list: product_list
    label: buy_label
    buy_button: buy_button

    size_hint: None, None
    canvas.before:
        Color:
            rgba: (150/250, 150/250, 150/250, 1)
        RoundedRectangle:
            size: self.size
            pos:self.pos
            radius: [15]
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        PlaneHead:
            size_hint_y: 0.05

        BoxLayout:
            orientation: "horizontal"
            cols: 2
            spacing: 50
            padding: 10
            BoxLayout:
                size_hint_x: 0.7
                orientation: "vertical"

                canvas.before:
                    Color:
                        rgba: (70/250, 70/250, 70/250, 1)
                    RoundedRectangle:
                        size: self.size
                        pos:self.pos
                        radius: [15]

                PlaneHeader:
                    size_hint_y: 0.1
                    canvas.before:
                        Color:
                            rgba: (50/250, 50/250, 50/250, 1)
                        RoundedRectangle:
                            size: self.size
                            pos:self.pos
                            radius: [15]
                BoxLayout:
                    id: product_list
                    size_hint_y: 1.5
                    orientation: "vertical"
            BoxLayout:
                size_hint_x: 0.3
                orientation: "vertical"
                spacing: 50
                Widget:
                    size_hint_y: 1.1
                    canvas.before:
                        Color:
                            rgba: (70/250, 70/250, 70/250, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [15]
                BoxLayout:
                    size_hint_y: 0.4
                    orientation: "vertical"
                    canvas.before:
                        Color:
                            rgba: (70/250, 70/250, 70/250, 1)
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [15]
                    Label:
                        id: buy_label
                        size_hint_y: 0.1
                        text: "Weight"
                        canvas.before:
                            Color:
                                rgba: (50/250, 50/250, 50/250, 1)
                            RoundedRectangle:
                                size: self.size
                                pos:self.pos
                                radius: [15]
                    Button:
                        id: buy_button
                        size_hint_y: 0.3
                        text: "Buy"
                        on_press: root.buy_all()
