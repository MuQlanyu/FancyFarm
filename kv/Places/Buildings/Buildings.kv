#: kivy 2.0.0

<Buildings>
    orientation: "horizontal"

<LeftBuildings>
    create_button: create_button
    create_pb: create_pb
    Widget:
        size_hint_x: 0.2
    BoxLayout:
        size_hint_x: 0.8
        orientation: "vertical"
        Button:
            id: create_button
            size_hint_y: 0.95
            text: "create"
            on_press: root.create()
        BoxLayout:
            size_hint_y: 0.05
            Widget:
                size_hint_x: 0.4
            ProgressBar:
                id: create_pb
                size_hint_x: 0.55
            Widget:
                size_hint_x: 0.05

<RightBuildings>
    create_button: create_button
    create_pb: create_pb

    BoxLayout:
        size_hint_x: 0.8
        orientation: "vertical"
        Button:
            id: create_button
            size_hint_y: 0.95
            text: "create"
            on_press: root.create()
        BoxLayout:
            size_hint_y: 0.05
            Widget:
                size_hint_x: 0.05
            ProgressBar:
                id: create_pb
                size_hint_x: 0.55
            Widget:
                size_hint_x: 0.4
    Widget:
        size_hint_x: 0.2
